<div class="border">

  <article class="card-body">
    <div class="content">
      <strong><%= link_to comment.name.capitalize(), users_show_path(:id => comment.user_id), class: "link-darkgreen-formal" %></strong>  
      on  <%= comment.created_at.to_s(:db) %><br>
      <h6 class="row-padding-sm login"><%= comment.comment %><h6>
    </div>

    <div class="d-flex justify-content-end">
      <% if current_user %>
        <% if comment.user_id == current_user.id %>
        <%= link_to 'Delete', [comment.post, comment],
                    method: :delete, class: "link-darkgreen-formal", data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
    </div>
  </article>
</div>
<br>

