<section class="section">
<div class="container" >
<%= form_with(model:[@post, @post.comments.build], remote: true) do |form| %>


  <div class="form-group">
    <%#= form.label :name %>
    <%= form.hidden_field :name , class:'form-control', value:current_user.name %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment , class:'form-control', :rows => 5 %>
  </div>

  <% if current_user %>
    <%= form.hidden_field :user_id, value: current_user.id%>
  <% end %>

  <div class="actions">
    <%= form.submit 'Submit' ,class: 'btn btn-outline-dark'%>
  </div>


<% end %>
</div>
</section>