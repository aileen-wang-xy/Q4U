<br>
<section class="section">
  <div class="container">
    
    <div class="row">
      <div class="col-3", vertical-align='middle'>
        <h1>MY POSTS</h1>
      </div>

      <div class="col-9", align="right", vertical-align='middle'>
        <%= link_to "Back", my_account_path , class: "btn btn-outline-dark" %>
      </div>
    </div>
    <br>

    <%#---- tabs -----%>
    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">WAITING</a>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">DEALT</a>
      </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

      <%#---- display my waiting posts -----%>
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <br>
        <% @waiting_posts.each do |waiting_post| %>

          <div class="card" >
            <div class="card-body">
              <h5 class="card-title"><%= link_to waiting_post.service_type, waiting_post %></h5>
              <p class="card-text"><%= waiting_post.spot_name %></p>
              <h6 class="card-subtitle mb-2 text-muted">Bonus: €<%= waiting_post.fee %></h6>
              <p class="card-text"><%= waiting_post.description %></p>
              <footer class="blockquote-footer">User Id: <cite title="Source Title"><%= waiting_post.user_id %></cite></footer>
              <%= link_to "Delete", post_path(waiting_post), method: :delete, data: { confirm: 'Are you certain you want to delete this?'} %>
            </div>
          </div>
          <br>
        <% end %>

        <%= paginate @waiting_posts %>
        <br>
        <br>

      </div>
      
      <%#---- display my dealt requests -----%>
      <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <br>
        <% @dealt_posts.each do |dealt_post| %>

          <div class="card" >
            <div class="card-body">
              <h5 class="card-title"><%= link_to dealt_post.service_type, dealt_post %></h5>
              <p class="card-text"><%= dealt_post.spot_name %></p>
              <h6 class="card-subtitle mb-2 text-muted">Bonus: €<%= dealt_post.fee %></h6>
              <p class="card-text"><%= dealt_post.description %></p>
              <footer class="blockquote-footer">User Id: <cite title="Source Title"><%= dealt_post.user_id %></cite></footer>
              <%= link_to "Delete", post_path(request), method: :delete, data: { confirm: 'Are you certain you want to delete this?'} %>
            </div>
          </div>
          <br>
        <% end %>

        <%= paginate @dealt_posts %>
        <br>
        <br>

      </div>

    </div>

  </div>

</section>