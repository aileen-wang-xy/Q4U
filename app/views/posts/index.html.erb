<p id="notice"><%= notice %></p>
<section class="section">
  <div class="container">

    <h1>Posts</h1>

    <% if user_signed_in? %>
      <a href="/posts/new">Create My Posts </a>
      <%#= link_to 'Create My Post', new_post_path %>
    <% else %>
      <a href="/user/sign_in">Create My Posts</a>
      <%#= link_to 'Create My Post', new_user_session_path%>
    <% end %>
    <hr>

    <% @posts.each do |post| %>

      <div class="card" >
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.service_type, post %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Bonus: â‚¬<%= post.fee %></h6>
          <p class="card-text"><%= post.description %></p>
          <footer class="blockquote-footer">Post Id: <cite title="Source Title"><%= post.id %></cite></footer>
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you certain you want to delete this?'} %>
        </div>
        <br>
      </div>
      
    <br>
    <% end %>

  </div>
</section>