<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <% if current_user.superadmin_role? %>
      <th>User</th>
      <% end %>
      <th>Service type</th>
      <th>Spot name</th>
      <th>Address</th>
      <th>Fee</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Description</th>
      <th>Contact name</th>
      <th>Contactno</th>
      <th>Contact email</th>
      <th>Constraint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if current_user.superadmin_role? %>
        <td><%= post.user_id %></td>
        <% end %>
        <td><%= post.service_type %></td>
        <td><%= post.spot_name %></td>
        <td><%= post.address %></td>
        <td><%= post.fee %></td>
        <td><%= post.start_time %></td>
        <td><%= post.end_time %></td>
        <td><%= post.description %></td>
        <td><%= post.contact_name %></td>
        <td><%= post.contactno %></td>
        <td><%= post.contact_email %></td>
        <td><%= post.constraint %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

